### General Settings ###
DEBUG=True
LOG_LEVEL=INFO

### Database Settings ###
MONGODB_URI=mongodb://localhost:27017/aidentity
MONGODB_DB=aidentity

### Redis Settings ###
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

### Frontend URL (for redirect after auth) ###
FRONTEND_URL=http://localhost:3000

### Authentication ###
# JWT Secret Key - use a strong random string
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

### Google OAuth for authentication ###
# Used for user login/signup flow
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8001/api/auth/callback/google

### Google OAuth for API access ###
# Used for Google Trends API access (separate from auth flow)
GOOGLE_API_REDIRECT_URI=http://localhost:8001/api/trend-analyzer/redirect

### API Keys ###
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Reddit
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=aidentity-trend-analyzer/1.0

# Twitter/X
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_SECRET=your_twitter_access_secret_here

# YouTube
YOUTUBE_API_KEY=your_youtube_api_key_here 